<div class="modal fade " id="exampleModal"  role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" >
  <div class="modal-dialog" role="document">
    <div class="modal-content modal-responsive">
      <div class="modal-body" style="display: block;">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="position: absolute;right: -42px;top: -39px;">
          <span aria-hidden="true">Close</span>
        </button>

        <h2 class="modelheader" style="text-align:center;" data-turbolinks="false">Request an Appointment</h2>
        <p class="message"></p>
        <%= render 'shared/request_appointment_form' %>
        <p class="disclaimer">Please do not submit any sensitive medical information. If you are in need of medical attention, please see a physician or call 911 in case of a medical emergency.</p>
      </div>
    </div>
  </div>
</div>

<div class="modal fade" id="exampleModal2"  role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true" >

  <div class="modal-dialog" role="document">
    <div class="modal-content modal-responsive" >
      <div class="modal-body" style="display: block;">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close" style="position: absolute;right: -42px;top: -39px;">
          <span aria-hidden="true">Close</span>
        </button>

        <h2 class="modelheader" style="text-align:center;" data-turbolinks="false">Request a Tour</h2>
        <p class="message"></p>
       <%= form_for Tour.new do |f| %>
        <div class="row">
          <%= f.text_field :your_name, class: 'required-input', placeholder: '* Your Name', 'aria-label': 'Your Name1', style: 'width: 48%' %>
          <%= f.text_field :email, class: 'required-input', placeholder: '* Email', 'aria-label': 'Your Email1', style: 'width: 48%' %>
          <%= f.text_field :phone, class: 'required-input', placeholder: '* Phone', 'aria-label': 'Your phon1', style: 'width: 48%' %>
           <%= f.text_field :date, class: 'required-input modal_date', placeholder: '* Date', 'aria-label': 'Your Date', style: 'width: 48%', autocomplete: 'off' %>

          <div class="customize-select modal-show" data-visible="request_appointment,tour,meet_physician" id="modal_date_time1" style="width: 98% !important; display: block;margin-bottom: 30px">

            <div class="select-wrapper">

              <span class="current-selection">Any</span>
              <ul>
                <li class="option-selection" data-val="any">
                  <span>Any</span>
                </li>

                <li class="option-selection" data-val="morning">
                  <span>Morning</span>
                </li>

                <li class="option-selection" data-val="afternoon">
                  <span>Afternoon</span>
                </li>
              </ul>
              <%= f.hidden_field :time, 'data-column':"modal_date_time",value: 'any' %>
            </div>
          </div>
          <%= f.text_area :notes, row: 4, class: 'modal-show', placeholder: 'Notes', 'aria-label': 'Your Notes', 'data-visible':"request_appointment,tour,meet_physician", style: "display: block;" %>

          <textarea name="modal_message" data-visible="leave_suggestion,more_information,other" class="modal-show" rows="4" placeholder="Message" style="display: none;"></textarea>

          <fieldset class="modal-show" data-visible="request_appointment,leave_suggestion,tour,meet_physician,more_information" style="display: block;">
            <legend style="margin-top: 10px;margin-bottom: 10px"><p>I would like to be contacted via</p></legend>
            <input type="radio" name="appointment[contacted_via]" value="email" id="contacted_via_email2"><label for="contacted_via_email">Via Email</label>
            <input type="radio" name="appointment[contacted_via]" value="phone" id="contacted_via_phone2"><label for="contacted_via_phone">Via Phone</label>
          </fieldset>

          <fieldset class="modal-show" data-visible="other" style="display: none;">
            <input type="checkbox" name="modal_contact_me" id="modal_contact_me1">
            <legend style="margin-top: 10px;margin-bottom: 10px"><p>I would like somebody to contact me.</p></legend>
            <input type="radio" name="appointment[contacted_via]" value="email" id="contacted_via_email3"><label for="contacted_via_email">Via Email</label>
            <input type="radio" name="appointment[contacted_via]" value="phone" id="contacted_via_phone3"><label for="contacted_via_phone">Via Phone</label>
          </fieldset>

          <p class="disclaimer modal-show" data-visible="request_appointment,tour,meet_physician" id="action-requested1" style="display: block;margin-top: 10px;margin-bottom: 10px">Please note we cannot guarantee the date/time you have selected. We will call or email you with availabilities and schedule your  <span>request</span>.</p>

        </div>
        <%= f.submit 'Submit', class: 'styled-link submit-appointment', style: "width: 95%;margin-top: 10px;margin-bottom: 10px"%>
      <% end %>
        <p class="disclaimer">Please do not submit any sensitive medical information. If you are in need of medical attention, please see a physician or call 911 in case of a medical emergency.</p>
    </div>
    </div>
  </div>
</div>
